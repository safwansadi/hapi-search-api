{
    "name": "drobboo-server",
    "version": "1.2.2",
    "private": true,
    "scripts": {
      "db:delete": "sequelize db:drop",
      "db:create": "sequelize db:create",
      "db:sync": "node scripts/db-sync.js",
      "db:migrate:all": "sequelize db:migrate",
      "db:migrate:from": "sequelize db:migrate --from",
      "db:migrate:undo": "sequelize-cli db:migrate:undo",
      "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
      "db:migrate:create": "npx sequelize-cli migration:generate --name ",
      "db:seed:all": "sequelize-cli db:seed:all",
      "lint": "eslint src --color",
      "test": "lab",
      "dev": "nodemon src/index.js",
      "dev:start": "git checkout develop && git pull -p && yarn && yarn db:migrate:all && yarn dev",
      "format": "prettier --write  \"./**/*.{js,jsx,json}\""
    },
    "dependencies": {
      "@hapi/boom": "^9.1.0",
