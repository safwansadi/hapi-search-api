      "crypto-random-string": "^3.3.1",
      "csv-parser": "^3.0.0",
      "dotenv": "^8.2.0",
      "form-data": "^4.0.0",
      "fs": "^0.0.1-security",
      "hapi-auth-jwt2": "^10.1.0",
      "hapi-pino": "^8.0.1",
      "https": "^1.0.0",
      "inert": "^5.1.3",
      "ip": "^1.1.5",
      "json2csv": "^5.0.6",
      "jsonwebtoken": "^8.5.1",
      "lodash": "^4.17.19",
      "moment": "^2.27.0",
      "moment-timezone": "^0.5.33",
      "node-fetch": "^2.6.1",
      "nodemailer": "^6.4.18",
      "nodemon": "^2.0.4",
      "number-to-bengali": "^1.1.0",
      "otp-generator": "^2.0.0",
      "path": "^0.12.7",
